<div id="needs_wrapper" class="map-large">
<%= gmaps4rails(@map) %>

<div id="needs">
	
<h1>Needs <%= link_to 'New', new_work_order_path, :class => "btn" %> <a href="#" id="toggle_map" class="btn btn-small btn-inverse pull-right"><i class="icon-resize-full"></i></a></h1>
<table id="needs_table" class="table">
  <thead>
  <tr>
	<th><%= sortable "created_at", "Date" %></th>
    <th><%= sortable "zones.zone", "Zone" %></th>
    <th>Contact</th>
    <th><%= sortable 'waiver_id', "Waiver" %></th>
    <th><%= sortable "wo_statuses.status", "Status" %></th>
  </tr>
  </thead>
  <tbody>
<% @work_orders.each do |work_order| %>
  <tr class="<%= work_order.wo_status.style ? work_order.wo_status.style : "" %>">
	<td><%= work_order.created_at.strftime('%m/%d') %></td>
    <td><%= work_order.zone ? work_order.zone.zone : "?" %></td>
    <td>
		<strong><%= link_to work_order.affected.contact.address.address, work_order %></strong><br/>
		<%= work_order.affected.contact.name %><br/>
		<%= work_order.affected.contact.phone %><br/>
		<%= work_order.affected.contact.email %>
	</td>
    <td><%= work_order.waiver ? raw("<i class='icon-check'></i>") : raw("<i class='icon-check-empty'></i>") %></td>
    <td><%= work_order.wo_status ? work_order.wo_status.status : "" %></td>
  </tr>
<% end %>
</tbody>
</table>

</div>

</div> <!--END needs_wrapper -->