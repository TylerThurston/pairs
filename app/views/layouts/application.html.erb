<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Myapp" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
	<link rel="stylesheet" href="http://api.tiles.mapbox.com/mapbox.js/v1.0.0/mapbox.css"/>
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="http://api.tiles.mapbox.com/mapbox.js/v1.0.0/mapbox.ie.css"/>
    <![endif]-->
    <script src="http://api.tiles.mapbox.com/mapbox.js/v1.0.0/mapbox.js"></script>
	<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" rel="stylesheet">
  </head>
  <body>
    <header class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container-fluid">
           <div class="row-fluid">
			<% if controller_path.split('/').first == 'admin' %>
			<div class="span3">
			          <div class="well sidebar-nav">
			            <ul class="nav nav-list">
			              <li class="nav-header">Settings</li>
						  <li><a href="<%= admin_dashboard_url %>">Dashboard</a></li>
			              <li><a href="<%= admin_zones_url %>">Zones</a></li>
			              <li><a href="<%= admin_wo_statuses_url %>">WO Status</a></li>
			              <li><a href="#">Link</a></li>
			            </ul>
			          </div><!--/.well -->
			        </div><!--/span-->
			<% end %>
            <div class="span<%= controller_path.split('/').first == 'admin' ? '9' : '12' %>">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>