<h1>Users</h1>
<p></p>

<div id="main">		
	<table id="users_table" class="table">
	  <thead>
		  <tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Role</th>
		  </tr>
	  </thead>
	  <tbody>
		<% @users.each do |u| %>
		  <tr>
		  	<td><%= u.contact ? u.contact.first_name : "" %></td>
			<td><%= u.contact ? u.contact.last_name : "" %></td>
			<td><%= u.username %></td>
			<td><%= u.contact ? u.contact.email : "" %></td>
			<td>
				<%= simple_form_for [:admin, u], :remote => "true" do |f| %>
					<%= f.association :role, label: false %>
				<% end %>
			</td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
</div><!-- main -->
